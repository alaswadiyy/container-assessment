# --- Application ---
PORT=8080

# --- Database ---
# Use 'mongo' as the hostname because that is the service name in your docker-compose.yaml
MONGO_URI=mongodb://mongo:27017
DB_NAME=muchtodo

# --- Authentication ---
# Use a long, random string for your JWT secret
JWT_SECRET_KEY="your-super-secret-key-that-is-long-and-random"
JWT_EXPIRATION_HOURS=72

# --- Logging ---
# Valid levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL="DEBUG"
LOG_FORMAT="json"

# --- Testing ---
INTEGRATION=true